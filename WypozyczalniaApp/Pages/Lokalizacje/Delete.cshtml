@page
@model WypozyczalniaApp.Pages.Lokalizacje.DeleteModel

@{
    ViewData["Title"] = "Usuń Lokalizację";
}

<h1 class="text-danger">Usuń Lokalizację</h1>
<h3>Czy na pewno chcesz usunąć ten oddział?</h3>
<div class="card shadow-sm p-3 mb-4 border-danger">
    <dl class="row">
        <dt class="col-sm-2">Nazwa</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Lokalizacja.Nazwa)</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Lokalizacja.Adres)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Lokalizacja.LokalizacjaId" />
        <input type="submit" value="Usuń trwale" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>