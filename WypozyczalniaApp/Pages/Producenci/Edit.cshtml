@page
@model WypozyczalniaApp.Pages.Producenci.EditModel

@{
    ViewData["Title"] = "Edytuj Producenta";
}

<h1>Edytuj Producenta</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Producent.ProducentId" />

            <div class="form-group mb-3">
                <label asp-for="Producent.Nazwa" class="control-label">Nazwa Producenta</label>
                <input asp-for="Producent.Nazwa" class="form-control" />
                <span asp-validation-for="Producent.Nazwa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Wróć</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}