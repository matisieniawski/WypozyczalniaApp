@page
@model WypozyczalniaApp.Pages.Pojazdy.DeleteModel

@{
    ViewData["Title"] = "Usuń Pojazd";
}

<h1 class="text-danger">Usuń Pojazd</h1>
<h3>Czy na pewno chcesz usunąć ten pojazd?</h3>
<div class="card shadow-sm p-3 mb-4">
    <dl class="row">
        <dt class="col-sm-3">Model</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Pojazd.Model.NazwaModelu)</dd>

        <dt class="col-sm-3">Numer VIN</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Pojazd.NumerVin)</dd>

        <dt class="col-sm-3">Numer Rejestracyjny</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Pojazd.NumerRejestracyjny)</dd>

        <dt class="col-sm-3">Data Dodania</dt>
        <dd class="col-sm-9">@Model.Pojazd.DataDodania.ToShortDateString()</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Pojazd.Status)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Pojazd.PojazdId" />
        <input type="submit" value="Usuń trwale" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>