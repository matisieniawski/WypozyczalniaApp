@page
@model WypozyczalniaApp.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Logowanie Pracownika";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-lg p-4 mt-5">
            <h1 class="card-title text-center mb-4">@ViewData["Title"]</h1>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Login" class="form-label">Login</label>
                    <input asp-for="Login" class="form-control" placeholder="Wpisz swój login" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Haslo" class="form-label">Hasło</label>
                    <input asp-for="Haslo" class="form-control" type="password" placeholder="Wpisz hasło" />
                    <span asp-validation-for="Haslo" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Zaloguj</button>
                </div>
            </form>

            <p class="mt-3 text-center text-muted">
                <small>Testowe konto: Login: jkowalski, Hasło: hash123</small>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}