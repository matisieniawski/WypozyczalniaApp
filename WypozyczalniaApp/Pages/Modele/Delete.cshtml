@page
@model WypozyczalniaApp.Pages.Modele.DeleteModel

@{
    ViewData["Title"] = "Usuń Model";
}

<h1 class="text-danger">Usuń Model</h1>
<h3>Czy na pewno chcesz usunąć ten model z katalogu?</h3>
<div class="card shadow-sm p-3 mb-4 border-danger">
    <dl class="row">
        <dt class="col-sm-2">Producent</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ModelPojazdu.Producent.Nazwa)</dd>

        <dt class="col-sm-2">Nazwa Modelu</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ModelPojazdu.NazwaModelu)</dd>

        <dt class="col-sm-2">Cena za Dobę</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ModelPojazdu.CenaZaDobe)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ModelPojazdu.ModelId" />
        <input type="submit" value="Usuń trwale" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>